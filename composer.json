{
    "name": "ionbytes/bean",
    "description": "A lightweight dependency injection container for PHP.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "di",
        "ioc",
        "psr11",
        "psr-11",
        "container"
    ],
    "support": {
        "issues": "https://github.com/ionbytes/bean/issues",
        "source": "https://github.com/ionbytes/bean"
    },
    "require": {
        "php": ">=8.2",
        "psr/container": "^2.0@dev"
    },
    "require-dev": {
        "ionbytes/coding-standard": "dev-master",
        "phpbench/phpbench": "^1.2@dev",
        "phpstan/phpstan": "2.0.x-dev",
        "phpunit/phpunit": "^11.1.x-dev",
        "vimeo/psalm": "^6.0@dev"
    },
    "provide": {
        "psr/container-implementation": "2.0.2"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "IonBytes\\Bean\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IonBytes\\Bean\\Tests\\Benchmark\\": "tests/benchmark/",
            "IonBytes\\Bean\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf -vpw",
        "phpbench": "phpbench run --report=compressed",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-html coverage"
    }
}
